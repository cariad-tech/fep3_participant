set(NATIVE_COMPONENTS_HEALTH_DIR ${PROJECT_SOURCE_DIR}/src/fep3/native_components/health)
set(NATIVE_COMPONENTS_HEALTH_INCLUDE_DIR ${PROJECT_SOURCE_DIR}/include/fep3/components/experimental)

set(NATIVE_COMPONENTS_HEALTH_SOURCES_PRIVATE
    ${NATIVE_COMPONENTS_HEALTH_DIR}/health_service.h
    ${NATIVE_COMPONENTS_HEALTH_DIR}/health_service.cpp
)

set(NATIVE_COMPONENTS_HEALTH_SOURCES_PUBLIC
    ${NATIVE_COMPONENTS_HEALTH_INCLUDE_DIR}/health_service_intf.h
)

set(NATIVE_COMPONENTS_HEALTH_SOURCES ${NATIVE_COMPONENTS_HEALTH_SOURCES_PRIVATE} ${NATIVE_COMPONENTS_HEALTH_SOURCES_PUBLIC})
source_group(components\\health FILES ${NATIVE_COMPONENTS_HEALTH_SOURCES})

##################################################################
# RPC
##################################################################
set(NATIVE_COMPONENTS_HEALTH_RPC_BINARY_DIR ${PROJECT_BINARY_DIR}/include/fep3/rpc_services/health)
set(NATIVE_COMPONENTS_HEALTH_RPC_INCLUDE_DIR ${PROJECT_SOURCE_DIR}/include/fep3/rpc_services/health)

# subtle difference: on unix the jsonrpc_generate_stub command silently fails if the output directory does not exist...
file(MAKE_DIRECTORY ${NATIVE_COMPONENTS_HEALTH_RPC_BINARY_DIR})

jsonrpc_generate_server_stub(${NATIVE_COMPONENTS_HEALTH_RPC_INCLUDE_DIR}/health.json
                             fep3::rpc_stubs::RPCHealthServiceStub
                             ${NATIVE_COMPONENTS_HEALTH_RPC_BINARY_DIR}/health_service_stub.h)

jsonrpc_generate_client_stub(${NATIVE_COMPONENTS_HEALTH_RPC_INCLUDE_DIR}/health.json
                             fep3::rpc_stubs::RPCHealthClientStub
                             ${NATIVE_COMPONENTS_HEALTH_RPC_BINARY_DIR}/health_client_stub.h)

set(NATIVE_COMPONENTS_HEALTH_RPC_SOURCES
    ${NATIVE_COMPONENTS_HEALTH_RPC_BINARY_DIR}/health_service_stub.h
    ${NATIVE_COMPONENTS_HEALTH_RPC_BINARY_DIR}/health_client_stub.h
    ${NATIVE_COMPONENTS_HEALTH_RPC_INCLUDE_DIR}/health.json
    ${NATIVE_COMPONENTS_HEALTH_RPC_INCLUDE_DIR}/health_service_rpc_intf_def.h)

source_group(components\\health\\rpc FILES ${NATIVE_COMPONENTS_HEALTH_RPC_SOURCES})

install(FILES
    ${NATIVE_COMPONENTS_HEALTH_RPC_BINARY_DIR}/health_service_stub.h
    ${NATIVE_COMPONENTS_HEALTH_RPC_BINARY_DIR}/health_client_stub.h
    DESTINATION
    include/fep3/rpc_services/health)

######################################
# Set up the variable
######################################
set(FEP3_SOURCES ${FEP3_SOURCES} ${NATIVE_COMPONENTS_HEALTH_SOURCES})
set(FEP3_SOURCES ${FEP3_SOURCES} ${NATIVE_COMPONENTS_HEALTH_RPC_SOURCES})